{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["./src/components/*"],
      "assets/*": ["./assets/*"],
      "ui/*": ["./src/ui/*"],
      "shared/*": ["./src/shared/*"],
      "pages/*": ["./src/pages/*"],
      "*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "index.js"]
}
